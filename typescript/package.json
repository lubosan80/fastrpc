{
    "name": "@seznam/fastrpc",
    "version": "1.0.0",
    "description": "Implementation of FastRPC protocol by Seznam.cz",
    "main": "fastrpc.js",
    "types": "fastrpc.d.ts",
    "files": [
        "fastrpc.d.ts",
        "fastrpc.js"
    ],
    "scripts": {
        "test": "cd ../test && node runner.mjs",
        "build": "tsc --target es2018 --declaration fastrpc.ts",
        "build-jsm": "tsc --target es2018 fastrpc.ts && sed -i \"\" -e \"s/TypeScript/ES2015 (autogenerated from TS source)/\" fastrpc.js && mv fastrpc.js ../javascript/fastrpc.mjs",
        "clean": "rm fastrpc.js fastrpc.d.ts",
        "update-version": "npm version --no-git-tag-version",
        "prepack": "npm run build",
        "postpack": "npm run clean"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seznam/fastrpc.git"
    },
    "keywords": [
        "seznam",
        "fastrpc",
        "frpc"
    ],
    "contributors": [
        "Ondrej Zara <ondrej.zara@gmail.com>",
        "Roman Ondraszek <roman.ondraszek@gmail.com>"
    ],
    "license": "GNU Lesser General Public License v2.1",
    "devDependencies": {
        "typescript": "^4.9.4"
    }
}